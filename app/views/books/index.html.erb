<h1>本の投稿一覧</h1>

<% form_with model: @book do |f| %>
<%= f.text_field :title %>
<%= f.text_area :body %>
<%= f.submit '新規投稿' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>