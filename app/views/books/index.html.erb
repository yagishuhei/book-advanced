<h1>おすすめ本の投稿一覧</h1>

<h3>新規投稿</h3>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
          </td>
        <td><%= book.body %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
      </tr>
    </tbody>
  <% end %>
</table>
<%= form_with model: @book do |f| %>
<%= f.label "タイトル" %><br/>
<%= f.text_field :title %><br/>
<%= f.label "説明文" %><br/>
<%= f.text_area :body %><br/>
<%= f.submit '新規投稿' %>
<% end %>




