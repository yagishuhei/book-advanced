<h4>投稿した本</h4>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book) do %>
        <%= book.title %>
        <% end %>
        </td>
      <td><%= book.body %></td>
      <td><%= link_to '編集する', edit_book_path(book) %></td>
      <td><%= link_to '削除する', book_path(book), method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>