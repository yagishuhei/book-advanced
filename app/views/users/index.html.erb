<h1>会員一覧</h1>

<table>
  <thead>
    <tr>
      <th>ユーザーイメージ</th>
      <th>ユーザー名</th>
      <th>自己紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_image("100x100") %></td>
        <td>
          <%= link_to user_path(user) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.introduction %></td>
        <% if user == current_user %>
        <td><%= link_to '編集する', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



